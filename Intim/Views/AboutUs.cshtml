@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<ContentModels.AboutUs>
@using ContentModels = Umbraco.Web.PublishedContentModels;
@{
    Layout = "Master.cshtml";
}
<div class="container">
    <h1>@Umbraco.Field("pageTitle")</h1>
    <div class="row">        
        <div class="col col-md-6">
         @{
            var typedMediaPickerSingle = Model.Content.GetPropertyValue<IPublishedContent>("pagePicture");
            <img src="@typedMediaPickerSingle.Url" style="width:500px" alt="@typedMediaPickerSingle.GetPropertyValue("alt")" />
          }
       </div>        
        <div class="col col-md-6">
            @Umbraco.Field("pageContent")
        </div>    
    </div>
</div>